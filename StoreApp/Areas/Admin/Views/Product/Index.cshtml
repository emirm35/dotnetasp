@model List<Product>

<div class="text-center"> 
<div class="display-6 mb-5"> Products </div>
<div class="d-flex justify-content-end mb-3 ">
    <a class="btn btn-success  " href="Product/Create/">
<i class="fa fa-plus"></i>
Create</a>
</div>

<table class="table table-striped   fs-5     ">
    <thead>
        <tr>
        <th>ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Operations</th>
        </tr>
    </thead>
    <tbody>

@foreach(var cat in Model)
{
 <tr>
            <td>@cat.ProductId</td>
            <td>@cat.ProductName</td>
            <td>@cat.Price.ToString("c0")</td>
            <td>
            <a class="btn btn-primary " asp-action="update" asp-route-id="@cat.ProductId">
            <i class="fas fa-edit"></i>
            Update</a>
               <a class="btn btn-info " asp-area="" asp-controller="Product" asp-action="get" asp-route-id="@cat.ProductId" target="_blank">View</a>

               <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cat.ProductId">
                <i class="fa fa-remove"></i>
                Delete
               </a>





            </td>
        </tr>
}
       




    </tbody>
    <tfoot>

    </tfoot>
</table></div>