@model ProductDtoForInsertion


<div class="text-center ">
    <div class="display-6 ">Create</div>

</div>



<form method="post" asp-action="create" enctype="multipart/form-data">

    <div class="text-danger " asp-validation-summary="All">

    </div>




    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-check " asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>


    </div>








    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control " />
    </div>


    @* Summary *@
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control " />
    </div>





    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control " />
    </div>


    @* ImageUrl *@
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control " />
    </div>





    <div class="form-gropup my-3    ">
        <button class="  btn btn-success    " type="submit">
            <i class="fas fa-save"></i>
            Save</button>
        <a class="btn btn-outline-success " asp-action="index">
            <i class="fas fa-list"></i>
            Products</a>
    </div>





</form>