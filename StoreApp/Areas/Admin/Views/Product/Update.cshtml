@model ProductDtoForUpdate


<div class="text-center ">
    <div class="display-6 ">Update</div>

</div>



@* methodda değişiklik var *@
<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger " asp-validation-summary="All">

    </div>

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-check " asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>


    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control " />
    </div>

    @* Summary *@
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control " />
    </div>



    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control " />
    </div>


    @* Current Image *@
    <div class="form-group my-4">
        <img class="shadow " src="@Model?.ImageUrl" width="200" />
    </div>



    @* ImageURL *@
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control " />
    </div>



    <div class="form-gropup my-3    ">
        <button class="  btn btn-success    " type="submit">
            <i class="fas fa-save"></i>
            Update</button>
        <a class="btn btn-outline-success " asp-action="index">
            <i class="fas fa-list"></i>
            Products</a>
    </div>
</form>